<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff">
    <include layout="@layout/toolbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:contentPadding="8dp"

            >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:contentPadding="8dp"
                android:id="@+id/card1"


                >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1. Sadasyo  ko vibhagiy kartavyo ke  nirvahan ke liye prerit karna"
                android:id="@+id/textView32"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:paddingBottom="10dp"/>
            </android.support.v7.widget.CardView>





            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:contentPadding="8dp"
                android:id="@+id/card2"
                android:layout_below="@+id/card1"



                >



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="2. Sangh ke sadasyo ke mool adhikaro ki raksha karna aur unhe sanvaidhanik nyay dilana"
                android:id="@+id/textView33"
                android:layout_below="@+id/textView32"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:paddingBottom="10dp"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:contentPadding="8dp"
                android:id="@+id/card3"
                android:layout_below="@+id/card2"




                >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="3.  Sadasyo ke adhikaro  aur kartavyo ke nirwahan me aane wali samasyaon ko prajatantrik dhang se suljhane ka pryash krna"
                android:id="@+id/textView34"
                android:layout_below="@+id/textView33"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="10dp"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:contentPadding="8dp"
                android:id="@+id/card4"
                android:layout_below="@+id/card3"



                >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="4. Apat sthiti me sadasyo tatha unke  pariwar ki samajik tatha aarthik sahayta uplabdha karana "
                android:id="@+id/textView35"
                android:layout_below="@+id/textView34"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:paddingBottom="10dp"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:contentPadding="8dp"
                android:id="@+id/card5"
                android:layout_below="@+id/card4"



                >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="5. Is baat ka prayatna karna ki samajik avam shashan istar par hamare padon ki mahatta sthapit ho "
                android:id="@+id/textView38"
                android:layout_below="@id/textView35"
                android:textStyle="bold"
                android:paddingBottom="10dp"
                />
            </android.support.v7.widget.CardView>



        </RelativeLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>



</LinearLayout>
